<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700 mb-2">
    {{ label }}
    {% if required %}
      <span class="text-red-500">*</span>
    {% endif %}
  </label>

  <input
    type="{{ type|default('text') }}"
    value="{{ value|default('') }}"
    name="{{ name|default(label|lower|replace({' ': '_'}) ) }}"
    placeholder="{{ placeholder|default('') }}"
    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition {{ error ? 'border-red-500' : 'border-gray-300' }}"
    {% if required %}required{% endif %}
    {% if error %}aria-invalid="true"{% endif %}
  />

  {% if error %}
    <p class="text-red-500 text-sm mt-1">{{ error }}</p>
  {% endif %}
</div>
