{% extends "base.twig" %}

{% block title %}Dashboard | WaveDesk{% endblock %}

{% block content %}
  {% include "components/navbar.twig" %}
  {% include "components/flash.twig" %}

  <div class="min-h-screen bg-gradient-to-b from-white to-blue-50 flex flex-col">
    <main class="flex-1 max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-12">
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Dashboard</h1>
        <p class="text-gray-600">Welcome back, {{ user.email }}! Here's your ticket overview.</p>
      </div>

      <!-- Stats Grid -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-blue-100 hover:shadow-md transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm font-medium">Total Tickets</p>
              <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.total }}</p>
            </div>
            <div class="p-3 rounded-lg bg-blue-50 text-blue-600">
              <i data-lucide="bar-chart-3" class="w-6 h-6"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-sm border border-amber-100 hover:shadow-md transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm font-medium">Open Tickets</p>
              <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.open }}</p>
            </div>
            <div class="p-3 rounded-lg bg-amber-50 text-amber-600">
              <i data-lucide="alert-circle" class="w-6 h-6"></i>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-sm border border-green-100 hover:shadow-md transition">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm font-medium">Closed Tickets</p>
              <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.closed }}</p>
            </div>
            <div class="p-3 rounded-lg bg-green-50 text-green-600">
              <i data-lucide="check-circle" class="w-6 h-6"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-blue-100 flex flex-col items-center">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/?page=tickets" class="flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
            <i data-lucide="ticket" class="w-5 h-5"></i>
            Manage Tickets
          </a>
          <a href="/?page=tickets" class="flex items-center justify-center gap-2 px-6 py-3 bg-white text-blue-600 border-2 border-blue-600 rounded-lg hover:bg-blue-50 transition font-medium">
            <i data-lucide="list" class="w-5 h-5"></i>
            View All Tickets
          </a>
        </div>
      </div>
    </main>

    {% include "components/footer.twig" %}
  </div>
{% endblock %}