{
    "name": "wavedesk/ticket-system",
    "description": "WaveDesk Ticket Management System",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Config\\": "config/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php migrate.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}